<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#151515">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:layout_marginTop="23dp" android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/editTextNewEventNameField"
            android:hint="@string/new_event_name" android:backgroundTint="#ffffff" android:textColor="#ffffff"
            android:textColorHint="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp" >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextNewEventLocationField"
            android:hint="@string/new_event_location" android:backgroundTint="#ffffff" android:textColor="#ffffff"
            android:textColorHint="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/new_event_date"
            android:layout_weight="0.18"
            android:id="@+id/textView17" android:layout_gravity="bottom" android:textColor="#ffffff"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textViewNewEventDateField" android:layout_gravity="left|bottom" android:layout_weight="0.4"
            android:textColor="#ffffff"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/calendar_icon"
            android:id="@+id/imageButtonNewEventDate" android:background="@drawable/add_button_shape"
            />
    </LinearLayout>
</LinearLayout>
