<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:background="@color/background">
    <EditText
            android:id="@+id/editTextEditTaskChangeTaskNameField"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:hint="@string/edit_task_name" android:backgroundTint="@color/white" android:textColorHint="@color/white"
            android:textColor="@color/white"/>
    <EditText
            android:id="@+id/editTextEditTaskChangeQuantityField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif"
            android:hint="@string/edit_task_quantity" android:inputType="text" android:backgroundTint="@color/white"
            android:textColor="@color/white" android:textColorHint="@color/white"/>
</LinearLayout>