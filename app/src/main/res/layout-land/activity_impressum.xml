<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#2e2a41">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginLeft="23dp" android:layout_marginTop="10dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/impressum_header"
                    android:id="@+id/textView" android:textColor="#cf4c5a" android:textSize="30dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginLeft="23dp" android:layout_marginRight="23dp"
                android:layout_marginTop="23dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/impressum_contact_header"
                    android:id="@+id/textView3" android:textColor="#cf4c5a"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/impressum_contact_tmg"
                    android:id="@+id/textView4" android:layout_marginTop="10dp" android:textColor="#cccdc8"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/impressum_contact_name"
                    android:id="@+id/textView5" android:layout_marginTop="10dp" android:textColor="#cccdc8"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/impressum_contact_adresse"
                    android:id="@+id/textView6" android:layout_marginTop="10dp" android:textColor="#cccdc8"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/impressum_contact_city"
                    android:id="@+id/textView7" android:layout_marginTop="10dp" android:textColor="#cccdc8"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginLeft="23dp" android:layout_marginTop="23dp"
                android:layout_marginRight="23dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/impressum_policy_header"
                    android:id="@+id/textView8" android:textColor="#cf4c5a"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/impressum_policy_1"
                    android:id="@+id/textView9" android:textColor="#cccdc8" android:layout_marginTop="10dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/impressum_policy_2"
                    android:id="@+id/textView10" android:layout_marginTop="10dp" android:textColor="#cccdc8"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>