<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:background="#2e2a41">

    <LinearLayout  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:layout_marginTop="23dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:layout_marginLeft="23dp" android:layout_marginRight="23dp"
                    android:layout_weight="0.5">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/new_task_editor"
                        android:id="@+id/textView20" android:layout_gravity="center_vertical"
                        android:textColor="#cccdc8"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/textViewNewTaskEditorField" android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical" android:textColor="#cccdc8"/>
            </LinearLayout>
            <RelativeLayout

                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:layout_gravity="center_horizontal|right"
                    android:layout_weight="0.25">
                <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/add_icon_small_task"
                        android:id="@+id/imageButtonNewTaskAddButton" android:background="@drawable/icons_shape_green"
                        android:layout_marginRight="23dp"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:layout_marginTop="23dp" android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp">
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextNewTaskNameField" android:layout_weight="0.70"
                    android:hint="@string/new_task_name" android:backgroundTint="#cccdc8" android:textColor="#cccdc8"
                    android:textColorHint="#cccdc8"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp">
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextNewTaskQuantityField" android:layout_weight="0.70"
                    android:hint="@string/new_task_quantity" android:backgroundTint="#cccdc8"
                    android:textColorHint="#cccdc8" android:textColor="#cccdc8"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp">
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextNewTaskNoteField" android:layout_weight="0.70"
                    android:hint="@string/new_task_note" android:backgroundTint="#cccdc8" android:textColor="#cccdc8"
                    android:textColorHint="#cccdc8"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>