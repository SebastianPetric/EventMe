<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge" android:text=""
                      android:id="@+id/textViewEditTaskTaskName" android:layout_alignParentTop="true"
                      android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                      android:layout_marginTop="10dp" android:layout_gravity="center_horizontal"
                      android:hint="Aufgabe"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceSmall"
                      android:id="@+id/textViewEditTaskEventName"
                      android:layout_below="@+id/textViewTaskOfEventEventLocation"
                      android:layout_alignLeft="@+id/textViewTaskOfEventEventLocation"
                      android:layout_alignStart="@+id/textViewTaskOfEventEventLocation"
                      android:layout_marginTop="8dp" android:layout_gravity="center" android:hint="Event"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceSmall"
                      android:id="@+id/textViewEditTaskQuantity"
                      android:layout_below="@+id/textViewTaskOfEventEventLocation"
                      android:layout_alignLeft="@+id/textViewTaskOfEventEventLocation"
                      android:layout_alignStart="@+id/textViewTaskOfEventEventLocation"
                      android:layout_marginTop="8dp" android:layout_gravity="center" android:hint="Menge"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:layout_marginTop="23dp" android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp">
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:id="@+id/editTextEditTaskQuantityField" android:layout_weight="0.75"
                    android:hint="@string/edit_task_quantity"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp">
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:id="@+id/editTextEditTaskNoteField" android:layout_weight="0.75"
                    android:hint="@string/edit_task_note"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginLeft="23dp" android:layout_marginTop="10dp"
                android:layout_marginRight="23dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/edit_task_previous_note_header"
                    android:id="@+id/textView18"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/textViewEditTaskRecentReview" android:layout_marginTop="10dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginLeft="23dp" android:layout_marginTop="10dp"
                android:layout_marginRight="23dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/edit_task_editor"
                    android:id="@+id/textView19"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/textViewEditTaskEditor"
                    android:hint="Sebastian" android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginTop="10dp">
            <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_task_delete_task_button"
                    android:id="@+id/buttonEditTaskDeleteTaskButton" android:layout_weight="0.5" android:layout_marginLeft="23dp"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_task_finish_button"
                    android:id="@+id/buttonEditTaskFinishButton" android:layout_marginRight="23dp"
                    android:layout_weight="0.5"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>